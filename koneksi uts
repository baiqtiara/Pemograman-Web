<?php
$servername = "localhost";
$username = "root";
$password = "";
$dbName = "portofoliotyr"; // <--- Di sinilah Anda mendefinisikan nama database

// Membuat koneksi ke database
$conn = new mysqli($servername, $username, $password, $dbName = "portfoliotyr");

// Mengecek koneksi
if ($conn->connect_error) {
    die("Koneksi gagal: (" . $conn->connect_errno . ") " . $conn->connect_error);
}
?>
